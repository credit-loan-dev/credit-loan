<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sixliu.user.repository.dao.AppDao" >

    <resultMap id="EntityResult" type="com.sixliu.user.repository.entity.AppEntity" >
        <id column="id"                                  property="id"                           jdbcType="VARCHAR" />
        <result column="code"                            property="code"                         jdbcType="VARCHAR" />
        <result column="secret"                          property="secret"                       jdbcType="VARCHAR" />
        <result column="redirect_url"                    property="redirectUrl"                  jdbcType="VARCHAR" />
        <result column="authorizedGrant_types"           property="authorizedGrantTypes"         jdbcType="VARCHAR" />
        <result column="scopes"                          property="scopes"                       jdbcType="VARCHAR" />
        <result column="access_token_validity_seconds"   property="accessTokenValiditySeconds"   jdbcType="INTEGER" />
        <result column="refresh_token_validity_seconds"  property="refreshTokenValiditySeconds"  jdbcType="INTEGER" />
        <result column="describe"                        property="describe"                     jdbcType="VARCHAR" />
        <result column="version"                         property="version"                      jdbcType="INTEGER" />
        <result column="is_deleted"                      property="deleted"                      jdbcType="INTEGER" />
        <result column="update_user_id"                  property="updateUserId"                 jdbcType="VARCHAR" />
        <result column="update_date"                     property="updateDate"                   jdbcType="TIMESTAMP" />
        <result column="create_user_id"                  property="createUserId"                 jdbcType="VARCHAR" />
        <result column="create_date"                     property="createDate"                   jdbcType="TIMESTAMP" />
    </resultMap>
    
    <parameterMap id="EntityParameter" type="com.sixliu.user.repository.entity.AppEntity"/>
    
    <!-- 表名-->
    <sql id="table_name">app</sql>
    
    <!-- 查询通用列 -->
    <sql id="select_common_column">
    	select `id`,`code`,`secret`,redirect_url,authorizedGrant_types,
    	        scopes,access_token_validity_seconds,refresh_token_validity_seconds,describe,
    	       `version`,update_user_id,update_date,create_user_id,create_date
    </sql>
    
	<select id="get" resultMap="EntityResult">
		<include refid="select_common_column"/>
		from 
		<include refid="table_name"/>
        where `id`=#{id}
        and is_deleted=0
    </select>
    
    <insert id="add" parameterMap="EntityParameter">
    	<selectKey keyProperty="id" resultType="java.lang.String" order="BEFORE">
              select replace(uuid(),'-','')
    	</selectKey>
    	insert into 
    	<include refid="table_name"/>
    	       (`id`,`code`,`secret`,redirect_url,authorizedGrant_types,scopes,
    	       access_token_validity_seconds,refresh_token_validity_seconds,`describe`,
    	       update_user_id,create_user_id)
    	 values(#{id},#{code},#{secret},#{redirectUrl},#{authorizedGrantTypes},#{scopes},
    	       #{accessTokenValiditySeconds},#{refreshTokenValiditySeconds},#{describe},
    	       #{updateUserId},#{createUserId})
	</insert>
	
	<update id="update" parameterMap="EntityParameter">
		update 
		<include refid="table_name"/>
		set `redirect_url`=#{redirectUrl},  `describe`=#{describe},               
		     `version`=version+1,  update_user_id=#{createUserId}
		where `id`=#{id} 
		and   `version`=#{version}
		and   is_deleted=0 
	</update>
	
	<update id="delete">
		update 
		<include refid="table_name"/>
		set is_deleted=1,update_user_id=#{createUserId}
		where `id`=#{id} 
		and   `version`=#{version}
		and   is_deleted=0 
	</update>
</mapper>